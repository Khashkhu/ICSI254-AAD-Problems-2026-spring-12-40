#include <iostream>
using namespace std;

long long comb3(long long n) {
    return n * (n - 1) * (n - 2) / 6;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;

    while (T--) {
        long long N, M;
        cin >> N >> M;

        if (N == 3) {
            cout << (M == 0) << "\n";
        } else if (M > N - 3) {
            cout << 0 << "\n";
        } else {
            cout << comb3(N) << "\n";
        }
    }
    return 0;
}
